    <div class="container my-5">
        <div class="card border-0 shadow mx-auto p-5" style="max-width: 1100px">
            <a href="/#experiences" class="text-secondary link-dark link-underline-opacity-0 link-underline-opacity-100-hover" ><i class="fa-solid fa-arrow-left"></i> Kembali</a>
            <h1 class="mb-4">Add Experiences</h1>
            <form id="experienceForm" action="/addExperience" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="posisi" class="form-label">Posisi Kerja/Magang</label>
                    <input name="posisi" type="text" class="form-control" id="posisi"
                        placeholder="Posisi Di Tempat Kerja/Magang ..." required />
                </div>
                <div class="mb-3">
                    <label for="perusahaan" class="form-label">Nama Perusahaan</label>
                    <input name="perusahaan" type="text" class="form-control" id="perusahaan" placeholder="PT. ABC ..."
                        required />
                </div>
                <div class="mb-3 d-flex gap-2">
                    <div class="w-50">
                        <label for="start_date" class="form-label">Start Date</label>
                        <input name="start_date" type="date" class="form-control" id="start_date" required />
                    </div>
                    <div class="w-50">
                        <label for="end_date" class="form-label">End Date</label>
                        <input name="end_date" type="date" class="form-control" id="end_date" required />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Technologies</label>
                    <div class="row row-cols-2">
                        <div class="col">
                            <div class="form-check">
                                <input name="checkbox" class="form-check-input" type="checkbox" id="nodejs"
                                    value='node.js' />
                                <label class="form-check-label" for="nodejs">Node JS</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <input name="checkbox" class="form-check-input" type="checkbox" id="reactjs"
                                    value='react' />
                                <label class="form-check-label" for="reactjs">React</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <input name="checkbox" class="form-check-input" type="checkbox" id="bootstrap"
                                    value='bootstrap' />
                                <label class="form-check-label" for="bootstrap">Bootstrap</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <input name="checkbox" class="form-check-input" type="checkbox" id="typeScript"
                                    value='typeScript' />
                                <label class="form-check-label" for="typeScript">TypeScript</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">List Yang Kamu Kerjakan</label>
                    <div id="taskContainer">
                        <div class="input-group mb-2">
                            <input name="list_tasks[]" type="text" class="form-control" placeholder="Membuat API..."
                                required />
                            <button type="button" class="btn btn-danger removeTask d-none">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <button type="button" id="addTask" class="btn btn-outline-primary mt-2">
                        <i class="fa-solid fa-plus"></i> Tambah List
                    </button>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload Image</label>
                    <input name="image" class="form-control" type="file" id="formFile" accept=".jpg, .jpeg, .png"
                        required />
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary rounded-pill px-5">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const addBtn = document.getElementById("addTask");
        const container = document.getElementById("taskContainer");

        addBtn.addEventListener("click", () => {
            const group = document.createElement("div");
            group.classList.add("input-group", "mb-2");
            group.innerHTML = `
                <input name="list_tasks[]" type="text" class="form-control" placeholder="Tambahkan tugas..." required>
                <button type="button" class="btn btn-danger removeTask">
                <i class="fa-solid fa-trash"></i>
                </button>
            `;
            container.appendChild(group);
        });

        container.addEventListener("click", (e) => {
            if (e.target.closest(".removeTask")) {
                e.target.closest(".input-group").remove();
            }
        });
    </script>
