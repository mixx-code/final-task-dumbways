    <div class="container my-5">
        <div class="card border-0 shadow mx-auto p-5" style="max-width: 1100px">
            <a href="/#projects" class="text-secondary link-dark link-underline-opacity-0 link-underline-opacity-100-hover" ><i class="fa-solid fa-arrow-left"></i> Kembali</a>
            <h1 class="mb-4">Edit Project</h1>
            <form id="projectEditForm" action="/editProject/{{dataProjects.id}}" method="post"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title_project" class="form-label">Judul Projek</label>
                    <input name="title_project" type="text" class="form-control" id="title_project"
                        value="{{dataProjects.title_project}}" placeholder="Masukan Judul Projek ..." required />
                </div>
                <div class="mb-3">
                    <label for="desk" class="form-label">Deskripsi Project</label>
                    <textarea name="desk" class="form-control" id="desk" rows="3"
                        placeholder="Masukkan deskripsi project anda ..." required>{{dataProjects.desk}}</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Technologies</label>
                    <div class="row row-cols-2">
                        <div class="col">
                            <div class="form-check">
                                <input name="checkbox" class="form-check-input" type="checkbox" id="nodejs"
                                    value="node.js" {{#if (includes dataProjects.list_techs "node.js"
                                    )}}checked{{/if}} />
                                <label class="form-check-label" for="nodejs">Node JS</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <input name="checkbox" class="form-check-input" type="checkbox" id="reactjs"
                                    value="react" {{#if (includes dataProjects.list_techs "react" )}}checked{{/if}} />
                                <label class="form-check-label" for="reactjs">React</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <input name="checkbox" class="form-check-input" type="checkbox" id="bootstrap"
                                    value="bootstrap" {{#if (includes dataProjects.list_techs "bootstrap"
                                    )}}checked{{/if}} />
                                <label class="form-check-label" for="bootstrap">Bootstrap</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <input name="checkbox" class="form-check-input" type="checkbox" id="typeScript"
                                    value="typeScript" {{#if (includes dataProjects.list_techs "typeScript"
                                    )}}checked{{/if}} />
                                <label class="form-check-label" for="typeScript">TypeScript</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="link_project" class="form-label">Link Projek</label>
                    <input name="link_project" type="text" class="form-control" id="link_project"
                        value="{{#if dataProjects.link_project}}{{dataProjects.link_project}}{{else}}#{{/if}}" placeholder="Masukan link Projek ..." required />
                </div>
                <div class="mb-3">
                    <label class="form-label d-block">Gambar Saat Ini</label>
                    {{#if dataProjects.imageUrl}}
                    <img src="{{dataProjects.imageUrl}}" alt="Current image" class="img-thumbnail mb-2"
                        style="max-width: 260px;" />
                    {{else}}
                    <p class="text-muted">Belum ada gambar</p>
                    {{/if}}
                    <input type="hidden" name="existingImage" value="{{dataProjects.imageUrl}}" />
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Ganti Gambar (opsional)</label>
                    <input name="image" class="form-control" type="file" id="formFile" accept=".jpg, .jpeg, .png" />
                    <small class="text-muted">Kosongkan jika tidak ingin mengganti gambar.</small>
                </div>
                <div class="text-end">
                    <a href="/projects" class="btn btn-light me-2">Batal</a>
                    <button type="submit" class="btn btn-primary rounded-pill px-5">Update</button>
                </div>
            </form>
        </div>
    </div>
